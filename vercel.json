{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/src/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/index.js"
    },
    {
      "source": "/auth/(.*)",
      "destination": "/backend/src/index.js"
    },
    {
      "source": "/callback",
      "destination": "/backend/src/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/web/dist/index.html"
    }
  ]
}